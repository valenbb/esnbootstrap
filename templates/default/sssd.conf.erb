[sssd]
domains = <%= node['realm']['sssd_domain'] %>
config_file_version = 2
services = nss, pam

[domain/<%= node['realm']['sssd_domain'] %>]
ad_domain = <%= node['realm']['sssd_domain'] %>
krb5_realm = <%= node['realm']['sssd_domain'].upcase %>
realmd_tags = manages-system joined-with-samba
cache_credentials = True
id_provider = ad
krb5_store_password_if_offline = True
default_shell = /bin/bash
ldap_id_mapping = True
use_fully_qualified_names = <%= node['realm']['use_fqdn'] %>
fallback_homedir = /home/%u@%d
access_provider = ad

